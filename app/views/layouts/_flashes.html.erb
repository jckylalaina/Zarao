<div class="container">
<% if notice %>
  <div class="alert alert-success alert-dismissible col-3" style="position: absolute;right:0px;top:50px;z-index:99999999">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= notice %>
  </div>
  <script type="text/javascript">
    setTimeout(function(){
       document.getElementsByClassName("alert")[0].classList.add("hide")
    },5000)
  </script>
<% end %>

<% if alert %>
  <div class="alert alert-danger alert-dismissible col-3" style="position: absolute;right:0px;top:50px;z-index:9999999">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= alert %>
   </div>
    <script type="text/javascript">
    setTimeout(function(){
       document.getElementsByClassName("alert")[0].classList.add("hide")
    },5000)
  </script>
  
<% end %>
